.layout__header
	width 100%
	height 50px
	background-color $color-background-inversion

	& > .layout__container
		flex-direction row
		justify-content space-between
		align-items center
		height 100%

	&-main, &-auth
		flex-center()

	&-logo
		transition opacity $transition

		&:hover
			opacity .7

	&-menu
		display flex
		justify-content flex-start
		align-items center
		margin-left 64px

	&-link
		font-size 16px
		color $color-text-light
		font-weight $regular
		padding 8px 12px
		border-radius $border-radius
		transition-property background-color, color
		transition-duration 0.4s
		transition-timing-function ease
		transition-delay 0s

		&:hover
			background-color $color-background-hover
			color $color-text-inversion

	&-auth
		& > .ui-button:not(:first-child)
			margin-left 10px
